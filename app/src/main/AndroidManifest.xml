<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="id.co.lcs.apps">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.InventoryMenuActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.WMStockActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.ScanActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.FormTRActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.GoodReceiptActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.GoodReceiptDetailActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.GoodReceiptSupplierActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.GoodReceiptSupplierDetailActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan"></activity>
        <activity android:name=".activity.StockTakeActivity"
            android:screenOrientation="portrait"></activity>
        <activity android:name=".activity.SerialNumberActivity"
            android:screenOrientation="portrait"></activity>
        <activity
            android:name=".activity.SoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppThemeDialog" />
        <activity android:name=".activity.PreviewImageActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.SplashActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.MenuActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".activity.SignupActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="adjustPan" />
        <activity
            android:name=".activity.MainActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustPan" />
        <activity android:name=".activity.CartActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.ScanBarcodeActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.DeliveryStatusActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.ProfileActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.EditProfileActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.ChangePasswordActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".activity.ProductListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.ProductSearchListActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.TransferRequestActivity"
            android:screenOrientation="portrait"
                  android:windowSoftInputMode="adjustPan"/>
        <activity android:name=".activity.BarcodeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.PointOfSalesActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>